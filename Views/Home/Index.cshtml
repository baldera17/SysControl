@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="form-group row">
        <img src="~/img/doktuz_transparent.gif" style="width:auto" />
        <div class="col-sm-7">
            <h1>Bienvenido</h1>
            <h4>@ViewBag.NombreUsuario</h4>
        </div>
    </div>

    <div class="row">
        <div class="container-sm" style="width:520px;height:450px">
            <form>
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/img/Mantener la buena salud.jpeg" class="d-block w-100" alt="Mantener la buena salud" width="620" height="450">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/Riesgos Ergonomicos.jpeg" class="d-block w-100" alt="Riesgos Ergonomicos" width="620" height="450">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/Condiciones Ambientales.jpeg" class="d-block w-100" alt="Condiciones Ambientales" width="620" height="450">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/Transtorno Musculo.jpeg" class="d-block w-100" alt="Transtorno Musculo" width="620" height="450">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/Aspectos Psicosociales.jpeg" class="d-block w-100" alt="Aspectos Psicosociales" width="620" height="450">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>



