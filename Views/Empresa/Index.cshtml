
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section estilos{
    <style>
        .pac-container {
            z-index: 99999;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                Lista de Empresas
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(0)" data-target="#FormModal" data-toggle="modal"> <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Ruc</th>
                                    <th>Direccion</th>
                                    <th>Estado</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Datos de la Empresa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtid" class="model borrar" value="0" type="hidden" />
                    <input id="txtidubi" class="model borrar" value="0" type="hidden" />
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label col-form-label-sm">Nombre<span class="error"></span></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control form-control-sm required borrar" id="txtNombre" name="apellidos">
                        </div>
                        <label for="inputPassword" class="col-sm-0 col-form-label col-form-label-sm">Ruc<span class="error"></span></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control form-control-sm required borrar" id="txtRuc" name="nombres">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label col-form-label-sm">Direccion<span class="error"></span></label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control form-control-sm required borrar" id="txtDireccion" name="direccion">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label">Ubicacion </label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="us3-address" />
                        </div>
                        <label class="col-sm-0 control-label">Radio</label>

                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="us3-radius" />
                        </div>
                    </div>
                    
                    <div id="us3" style="width: 100%; height: 300px;"></div>
                    <div class="clearfix">&nbsp;</div>
                    <div class="m-t-small">

                        <div class="col-sm-3">
                            <input type="hidden" class="form-control" style="width: 110px" id="us3-lat" />
                        </div>

                        <div class="col-sm-3">
                            <input type="hidden" class="form-control" style="width: 110px" id="us3-lon" />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCancelar" type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button id="btnGuardarCambios" type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>



@section scripts{

    <script src="@Url.Content("https://maps.google.com/maps/api/js?sensor=false&libraries=places&key=AIzaSyAfzzT5rWhX3gqvKA639hebqteeNFvx_rc")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Plugins/mapa/dist/locationpicker.jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Views/Empresa_Crear.js")" type="text/javascript"></script>
}



