
@{
    ViewBag.Title = "Index";
}

<div>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <!--/.col (left) -->
                <!-- right column -->
                <div class="container-fluid">

                    <!-- general form elements disabled -->
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">Mi Servicio</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form>
                                <div class="row">
                                    <input id="txtIdUbicacion" type="hidden" value="0" />
                                    <input id="txtUltima" type="hidden">
                                    <input id="txtHoraFin" type="hidden">

                                    <input id="txtLa" type="hidden">
                                    <input id="txtLo" type="hidden">
                                    <input id="txtRa" type="hidden">

                                    <input id="txtIdDetalleUbicacion" type="hidden" value="0" />
                                    <input id="txtIdUsuario" type="hidden" value="@ViewBag.IdUser" />
                                    <div class="col-sm-3">
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label>Nombres y Apellidos</label>
                                            <label class="form-control form-control-sm model mb-1" readonly>@ViewBag.User</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>Fecha</label>
                                            <input id="txtfechaventa" type="text" class="form-control" placeholder="Enter ..." disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <!-- textarea -->
                                        <div class="form-group">
                                            <label>Empresa</label>
                                            <select id="cboEmpresa" type="text" class="form-control" rows="3" placeholder="Enter ..."></select>
                                        </div>

                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>Hora</label>
                                            <label id="txtHora" class="form-control form-control-sm model mb-1" readonly></label>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <input type="hidden" class="form-control" style="width: 110px" id="txtHorafin" />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <input type="hidden" class="form-control" style="width: 110px" id="us3-lat" />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <input type="hidden" class="form-control" style="width: 110px" id="us3-lon" />
                                        </div>
                                    </div>

                                </div>
                                <div class="row">

                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <img id="imgFoto" width="150" height="100" style="display:none" />

                                        </div>

                                        <div>
                                            <button id="btnNuevaFoto" type="button" class="btn btn-sm btn-success" onclick="TomarFoto()" data-toggle="modal" data-target="#modal-default">
                                                <i class="fa fa-plus" aria-hidden="true"></i>
                                                Iniciar
                                            </button>
                                        </div>

                                    </div>
                                    <div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <input type="hidden" class="form-control" placeholder="Enter ..." disabled>
                                            </div>
                                        </div>
                                        <div>
                                            <button id="btnFinalizar" type="button" class="btn btn-sm btn-success" onclick="TomarFoto1()" data-toggle="modal" data-target="#modal-default1">
                                                Finalizar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- /.card -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>
    <div id="map" style="width: 550px; height: 400px; display:none"></div>
    <div id="map1" style="width: 550px; height: 400px; "></div>
</div><!-- /.container-fluid -->
<!-- Modal -->
<div class="modal" id="modal-default" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Foto</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-sm-6">
                    <video muted="muted" id="video" width="300" high="400"></video>
                    <canvas id="canvas" style="display: none;"></canvas>
                    <div class="form-group">
                        <select name="listaDeDispositivos" id="listaDeDispositivos" style="display:none"></select>
                    </div>
                    <div class="form-group">
                        <button id="boton">Tomar foto</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnCancelar" type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<!-- Modal finalizar servicio -->
<div class="modal" id="modal-default1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Foto</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-sm-6">
                    <video muted="muted" id="video1" width="300" high="400"></video>
                    <canvas id="canvas1" style="display: none;"></canvas>
                    <div class="form-group">
                        <select name="listaDeDispositivos1" id="listaDeDispositivos1" style="display:none"></select>
                    </div>
                    <div class="form-group">
                        <button id="boton1">Tomar foto</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnCancelar1" type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts{
    <script async src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAfzzT5rWhX3gqvKA639hebqteeNFvx_rc&libraries=geometry&callback=GuardarDatos"></script>

    <script src="~/Scripts/Views/marcarAsistencia.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script>
         setTimeout(function() {
        document.location.href ='@Url.Action("Salir", "Home")';
        },120000);
    </script>
}



